@model IEnumerable<LabourZillaZone.Models.Admin>

@{
    ViewData["Title"] = "Index";
}
<div class="img" style="background-image: url(../Images/labour2.jpg);background-size:cover;background-position:center center; height:100vh;position:fixed;left:0;right:0;z-index:-1;filter:blur(3px);-webkit-filter:blur(3px);"></div>


<h1 style="text-align:center">Admin</h1>
<p>
    <a asp-action="Create"><button class="bg-info">Create New</button></a>
</p>

<table class="table table-dark table-hover">
    <thead>
        <tr style="background-color: teal">
            <th>
                @Html.DisplayNameFor(model => model.MailId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdminName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Apassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capassword)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.RoleL)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MailId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdminName)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Apassword)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capassword)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.RoleL)
                </td>
                <td>
                    @*<a asp-action="Edit" asp-route-id="@item.LoginId"><button>Edit</button></a> |*@
                    <a asp-action="Details" asp-route-id="@item.LoginId"><button>Details</button></a>
                    @*<a asp-action="Delete" asp-route-id="@item.LoginId"><button>Delete</button></a> |*@
                </td>
            </tr>
        }
    </tbody>
</table>
