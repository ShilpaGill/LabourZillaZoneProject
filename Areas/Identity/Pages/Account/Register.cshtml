@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="img" style="background-image: url(~/Images/labour2.jpg);background-size:cover;background-position:center center; height:100vh;position:fixed;left:0;right:0;z-index:-1;filter:blur(3px);-webkit-filter:blur(3px);"></div>


<h1 style="text-align:center;color:darkred">@ViewData["Title"]</h1>

<div class="row" style="background-color:black">

    <div class="img">
        <img src="~/Images/labour3.jpg" style="height:500px;width:500px">
    </div>


    <div style="height:500px;width:500px;padding-left:50px">

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 style="color:white;">Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email" style="color:white;"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" style="color:white;"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" style="color:white;"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
